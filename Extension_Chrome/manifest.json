{
    "manifest_version": 3,
    "name": "UFK_Refresh_Page",
    "description": "Updating a specific page with timing selection",
    "version": "0.1",
    "author": "Alexandr_Sybachin",
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "icons": {
        "32": "icons/icon-32.png"
    },
    "content_scripts": [
        {
            "js": [
                "js/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ]



}